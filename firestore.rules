rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Consultation documents - users can only access their own consultations
    // This ensures HIPAA compliance by restricting access to medical data
    match /consultations/{consultationId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId
        && request.resource.data.keys().hasAll(['userId', 'createdAt', 'status']);
    }
    
    // ICD-10 code reference data (read-only for all authenticated users)
    match /icd10_codes/{codeId} {
      allow read: if request.auth != null;
      allow write: if false; // Reference data should not be modified by clients
    }
    
    // User settings and preferences
    match /user_settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profiles - provider information
    match /user_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User usage tracking - consultation counts and billing status
    match /user_usage/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Audit logs (write-only for security)
    match /audit_logs/{logId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
